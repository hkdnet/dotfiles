[user]
	name = hkdnet
	email = hkdnet@users.noreply.github.com
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore  # globalな.gitignoreの指定
	editor = vim
[merge]
	ff = false
[color]
	ui = true
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
[ghq]
	root = ~/.ghq
	root = ~/.go/src
[alias]
	s   = status
	st  = status
	ss  = status -s
	sh  = show
	so  = remote show origin
	po  = push origin
	c   = commit -v
	# diff関連
	ci = diff
	cm = diff master           # masterとのdiff
	cw = diff --color-words    # 単語単位でいろつけてdiff
	cc = diff --cached         # addされているものとのdiff
	cs = diff --staged         # 同上(1.6.1移行)
	c1 = diff HEAD~            # HEADから1つ前とdiff
	c2 = diff HEAD~~           # HEADから2つ前とdiff
	c3 = diff HEAD~~~          # HEADから3つ前とdiff
	c4 = diff HEAD~~~~         # HEADから4つ前とdiff
	c5 = diff HEAD~~~~~        # HEADから5つ前とdiff
	c10 = diff HEAD~~~~~~~~~~  # HEADから10前とdiff
	# logをtree表示
	log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
	log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
