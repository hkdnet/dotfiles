#強力な補完
autoload -Uz compinit
compinit

setopt correct #コマンドのスペルを訂正する

#History設定
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000

#プロンプト
PROMPT='%F{red}(╹◡╹)っ%f'
RPROMPT='%F{white}%35<..<%~/%f'

# 色の設定
#export LSCOLORS=Exfxcxdxbxegedabagacad
# 補完時の色の設定
export LS_COLORS='di=01;34:ln=01;35:so=01;32:ex=01;31:bd=46;34:cd=43;34:su=41;30:sg=46;30:tw=42;30:ow=43;30'
# lsコマンド時、自動で色がつく
export CLICOLOR=true
# 補完候補に色を付ける
zstyle ':completion:*:default' list-colors ${(s.:.)LS_COLORS}


SPROMPT="%F{red}( ･ั﹏･ั)???%f %F{magenta}もしかして%f %F{white}%B%r%b%f %F{magenta}？ [うん(y),ちゃう(n)]%f:${reset_color} "

# 同じディレクトリを pushd しない
setopt pushd_ignore_dups

# ディレクトリ名だけで cd
setopt auto_cd

# 自動的にpushdして-0で移動
setopt auto_pushd

# 補完候補を詰めて表示
setopt list_packed

# anyenv
if [ -d $HOME/.anyenv ] ; then
  export PATH="$HOME/.anyenv/bin:$PATH"
  eval "$(anyenv init -)"
fi

# cdコマンド実行後、lsを実行する
function cd() {
  builtin cd $@ && ls;
}

#
# github
#
eval "$(hub alias -s)"

#
# gcd
#
function gcd() {
  cd $(ghq list -p | peco)
}

#
# golang
#
export GOPATH=$HOME/.go
export PATH=$PATH:$GOPATH/bin

#
# gem
#
export BUNDLER_EDITOR=atom

#
# secrets
#
source $HOME/.secrets
